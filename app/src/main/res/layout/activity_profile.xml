<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csc296.finalproject.ProfileActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:id="@+id/textView_profile_hello"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#3F51B5"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView_profile_hello"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:id="@+id/imageView_icon_photo"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Notes Photo "
            android:id="@+id/textView_profile_photo"
            android:textColor="#3F51B5"
            android:layout_gravity="center_vertical"
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:clickable="false"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView_profile_photo"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:id="@+id/imageView_icon_camera"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_camera"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Practice Video         "
            android:id="@+id/textView_profile_video"
            android:textColor="#3F51B5"
            android:layout_gravity="center_vertical"
            android:textStyle="bold|italic"
            android:textSize="15dp"/>

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoView_profile_video"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Name         "
            android:id="@+id/textView_profile_song_name"
            android:textColor="#3F51B5"
            android:layout_gravity="center_vertical"
            android:textStyle="bold|italic"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_profile_song_name"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="Music Name:"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save"
        android:id="@+id/button_profile_save"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ff33b5e5"
        android:textColor="#ffffff"
        android:onClick="button_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
