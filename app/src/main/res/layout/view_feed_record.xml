<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView_personal_share"
        android:src="@mipmap/icon_comment"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_personal_photo"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout4"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView_personal_share"
        android:layout_alignBottom="@+id/button_video_play">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_personal_song_name"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/textView_personal_comment"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView2"
            android:textSize="15dp"/>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button_video_play"
        android:textSize="15dp"
        android:background="#ff33b5e5"
        android:layout_alignBottom="@+id/imageView_personal_photo"
        android:layout_toEndOf="@+id/imageView_personal_photo"/>

</RelativeLayout>